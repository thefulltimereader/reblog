<article class="post">
<%= post.content %>
<span class="timestamp">
     Posted <%= time_ago_in_words(post.created_at) %> ago.
</span>
<% if current_user?(post.user) %>
<div class="delete_post">
<%= link_to "delete", post, :method => :delete, :confirm => "Are you
sure?", :title => post.content %>
</div>
<% end %>
</article>
